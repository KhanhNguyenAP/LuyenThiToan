        <activity
            android:name=".activities.ShowDetailActivity"
            android:label="@string/chitiet"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.CalculatorActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.ShowDetailLuyenThiActivity"
            android:label="@string/chitiet"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.DeThiActivity"
